{
  "name": "aws-migration",
  "version": "0.1.0",
  "bin": {
    "aws-migration": "bin/aws-migration.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:security": "jest --testPathPattern=security-validation",
    "test:connectivity": "jest --testPathPattern=connectivity",
    "test:compliance": "jest --testPathPattern=security-validation|connectivity",
    "security:scan": "npm run build && npx cdk synth && checkov -f cdk.out/SecurityTestStack.template.json --framework cloudformation",
    "cdk": "cdk"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "aws-cdk": "2.1023.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "aws-cdk-lib": "2.206.0",
    "constructs": "^10.0.0"
  }
}
